<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppTheme.MyActionBar" parent="@style/Widget.AppCompat.ActionBar" />

    <style name="actionBarSpinnerItemStyle" parent="@style/AppTheme">
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:textColorHighlight">@android:color/primary_text_dark</item>
    </style>

</resources>