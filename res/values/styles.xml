<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here.--> 
        <item name="actionBarStyle">@style/AppTheme.MyActionBar</item> 
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/AppTheme.MyActionBar</item>
    </style>

    <style name="AppTheme.MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="displayOptions">showHome|useLogo</item>
        <item name="android:displayOptions" tools:ignore="NewApi">showHome|useLogo</item>
    </style>

</resources>